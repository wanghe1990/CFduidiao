<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@drawable/score_shape"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/score_shape">

        <TextView
            android:id="@+id/table1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="80dp"
            android:textSize="20dp"
            android:text="战队1："/>

        <EditText
            android:id="@+id/team1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/table1"
            android:layout_alignBottom="@+id/table1"
            android:layout_marginRight="40dp"
            android:textSize="20dp"
            android:text="南北"/>

        <TextView
            android:id="@+id/table2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:text="战队2："/>

        <EditText
            android:id="@+id/team2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/table2"
            android:layout_alignBottom="@+id/table2"
            android:layout_marginRight="40dp"
            android:textSize="20dp"
            android:text="东西"/>

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="40dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:background="@drawable/home_shape"
            android:text="保存"/>

    </RelativeLayout>



</LinearLayout>