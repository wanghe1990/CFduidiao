<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="第一局"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:background="#f44fdf"
            android:layout_marginRight="30dp"
            android:text="重置"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="开室"
            android:padding="5dp"
            android:background="#3333ff"
            android:textColor="@color/white"
            android:textSize="26dp" />

        <RadioGroup
            android:id="@+id/rg_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_open_north"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:text="东西"
                android:layout_marginLeft="40dp"/>

            <RadioButton
                android:id="@+id/rb_open_east"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:text="南北"
                android:layout_marginLeft="40dp"/>

        </RadioGroup>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_open_kou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/tv_open_double_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:button="@null"
            android:background="@drawable/koudi_rb_background_shape"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="对大抠"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/tv_open_double_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:button="@null"
            android:background="@drawable/koudi_rb_background_shape"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="对小抠"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/tv_open_single_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:button="@null"
            android:background="@drawable/koudi_rb_background_shape"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="大王抠"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/tv_open_single_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:button="@null"
            android:background="@drawable/koudi_rb_background_shape"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="小王抠"
            android:textSize="20sp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/tv_open_use_big1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:button="@null"
            android:background="@drawable/koudi_rb_background_shape"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="消大王"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/tv_open_use_big2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:button="@null"
            android:background="@drawable/koudi_rb_background_shape"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="消大王"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/tv_open_use_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:button="@null"
            android:background="@drawable/koudi_rb_background_shape"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="消小王"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/tv_open_use_small2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:button="@null"
            android:background="@drawable/koudi_rb_background_shape"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="消小王"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="得分:"
            android:textSize="25sp"/>

        <ImageView
            android:id="@+id/iv_open_sub"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/sub"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/et_open_score"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/score_shape"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/iv_open_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/add"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff000"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="闭室"
            android:padding="5dp"
            android:background="#3333ff"
            android:textColor="@color/white"
            android:textSize="26dp" />

        <RadioGroup
            android:id="@+id/rg_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_close_north"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:text="东西"
                android:clickable="false"
                android:layout_marginLeft="40dp"/>

            <RadioButton
                android:id="@+id/rb_close_east"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:text="南北"
                android:clickable="false"
                android:layout_marginLeft="40dp"/>

        </RadioGroup>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_close_kou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/tv_close_double_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:button="@null"
            android:background="@drawable/koudi_rb_background_shape"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="对大抠"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/tv_close_double_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:button="@null"
            android:background="@drawable/koudi_rb_background_shape"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="对小抠"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/tv_close_single_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:button="@null"
            android:background="@drawable/koudi_rb_background_shape"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="大王抠"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/tv_close_single_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:button="@null"
            android:background="@drawable/koudi_rb_background_shape"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="小王抠"
            android:textSize="20sp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/tv_close_use_big1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:button="@null"
            android:background="@drawable/koudi_rb_background_shape"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="消大王"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/tv_close_use_big2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:button="@null"
            android:background="@drawable/koudi_rb_background_shape"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="消大王"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/tv_close_use_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:button="@null"
            android:background="@drawable/koudi_rb_background_shape"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="消小王"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/tv_close_use_small2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:button="@null"
            android:background="@drawable/koudi_rb_background_shape"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="消小王"
            android:textSize="20sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="得分:"
            android:textSize="25sp"/>

        <ImageView
            android:id="@+id/iv_close_sub"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/sub"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/et_close_score"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/score_shape"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/iv_close_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/add"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:text="单局比分: "/>

        <TextView
            android:id="@+id/result"
            android:layout_toRightOf="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:background="#1A79FF"
            android:layout_marginRight="30dp"
            android:text="计算"/>

    </RelativeLayout>


</LinearLayout>